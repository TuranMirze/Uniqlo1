@model ProductCreateVM

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Product create</h6>
    </div>
    <div class="card-body">
        <form enctype="multipart/form-data" method="post">
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input class="form-control" asp-for="Name">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description">Description</label>
                <textarea class="form-control" asp-for="Description"></textarea>
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoverFile">CoverFile</label>
                <input class="form-control" asp-for="CoverFile">
                <span class="text-danger" asp-validation-for="CoverFile"></span>
            </div>
            <div class="form-group">
                <label asp-for="OtherFiles">OtherFiles</label>
                <input class="form-control" asp-for="OtherFiles">
                <span class="text-danger" asp-validation-for="OtherFiles"></span>
            </div>
            <div class="form-row">
                <div class="form-group col">
                    <label asp-for="CostPrice">CostPrice</label>
                    <input class="form-control" asp-for="CostPrice">
                    <span class="text-danger" asp-validation-for="CostPrice"></span>
                </div>
                <div class="form-group col">
                    <label asp-for="SellPrice">SellPrice</label>
                    <input class="form-control" asp-for="SellPrice">
                    <span class="text-danger" asp-validation-for="SellPrice"></span>
                </div>
                <div class="form-group col">
                    <label asp-for="Discount">Discount</label>
                    <input class="form-control" asp-for="Discount">
                    <span class="text-danger" asp-validation-for="Discount"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col">
                    <label asp-for="Quantity"></label>
                    <input class="form-control" asp-for="Quantity">
                    <span class="text-danger" asp-validation-for="Quantity"></span>
                </div>
                <div class="form-group col">
                    <label asp-for="CategoryId">Categories</label>
                    <select asp-for="CategoryId" class="form-control" asp-items='new SelectList(ViewBag.Categories,"Id","Name")'>
                        <option selected disabled>Select Categories</option>
                        @foreach (var item in ViewBag.Categories)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                    <span class="text-danger" asp-route-id="CategoryId"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
